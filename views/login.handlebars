<main>
  <form action="login" method="POST" id="login-form" class="column">
    <h1>Login!</h1>

    <label for="email">
      Email:
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Enter email address"
      >
    </label>

    <label for="password">
      Password:
      <input
        type="password"
        name="password"
        id="password"  
        placeholder="Enter password"
      >
    </label>

    {{#if error}}
      <p class="error">{{message}}</p>
    {{/if}}

    <br>     

    <button type="submit" class="btn">Submit</button>
    <p>New user? Sign up <a href="/register" class="register">here!</a></p>
    <a href="/forgetpassword">Forgot Password?</a>
  </form>
</main>