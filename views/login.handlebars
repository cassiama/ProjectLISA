<main>
  <form action="login" method="POST" id="login-form" class="column">
    <div class="login-container">
      <div class="login-text">
    <h1 class="title">Login!</h1>
    <label for="email">
      Email:
      <br>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Enter email address"
      >
    </label>
<br>
<br>
    <label for="password">
      Password:
      <br>
      <input
        type="password"
        name="password"
        id="password"  
        placeholder="Enter password"
      >
    </label>

    {{#if error}}
      <p class="error">{{message}}</p>
    {{/if}}

    <br>
    <br> 
    <button type="submit" class="btn">Submit</button>
    <p>New user? <a href="/register" class="register" id="link">Sign up here!</a></p>
    <a href="/forgetpassword" id="link">Forgot Password?</a>
  </form>
    </div>
    </div>
</main>