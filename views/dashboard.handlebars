                        <button type="submit" class="button">Submit</button>
                        <input type="hidden" name="type" value="goals">
                    </form>
                    <br>
                    <a class="link" href="/editGoals">Want to edit your goals?</a>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
