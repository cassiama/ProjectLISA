<main>
  <form action="forgetpassword" method="POST" id="forget-form" class="column">
    <h1>Forgot Password?</h1>
    <p>Enter your email address and a new password setup link will be sent to you!</p>
    <label for="email">
      Email:
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Enter email address"
      >
    </label>
    {{#if error}}
      <p class="error">{{message}}</p>
    {{/if}}
    <br>     
    <a href="/newpassword">
    <button type="submit" class="btn">Submit</button>
    </a>
    </form>
</main>