<main>
	<form action="forgetpassword" method="POST" id="forget-form" class="column">
		<div class="vertical-container">
			<h1 class="title">Forgot Password?</h1>
			<p>Enter your email address and a new password setup link will be
				sent to you!</p>
			<label for="email">
				Email:
				<br>
				<input
					type="email"
					name="email"
					id="email"
					placeholder="Enter email address"
				/>
			</label>
			{{#if error}}
				<p class="error">{{message}}</p>
			{{/if}}
			<br />
			<br>
			<br>
			<a href="/newpassword">
				<button type="submit" class="btn button">Submit</button>
			</a>
			<br />
			<br />
			<a href="/login" class="button">Back to Login</a>
		</div>
	</form>
</main>